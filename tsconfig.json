{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["es2020", "es7", "es6", "dom"],
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strictNullChecks": true,
		"outDir": "dist",
		"rootDir": "./src",
		"baseUrl": "./src",
		"paths": {
			"~cli/*": ["./*"]
		}
	},
	"exclude": ["node_modules", "dist", "test", "**/__tests__/*", "jest.config.*", "test-usage", "src/usage.ts"]
}
